{
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "warn",
            2,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off",
            { "allow": ["log", "warn", "error"] }
        ],
        "no-unused-vars": [
            "error", { "args": "none" }
        ],
        "no-constant-condition": [
            "error", { "checkLoops": false }
        ]
    }
}
